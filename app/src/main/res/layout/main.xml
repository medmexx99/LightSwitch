<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:background="#4C864A">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_weight="0.5"
		android:orientation="vertical">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight=".50"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Esstisch"
			android:layout_gravity="center_horizontal"
			android:id="@+id/esstischTextView"
			android:textColor="#FFFFFF"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Lampe 1"
			android:layout_gravity="center_horizontal"
			android:onClick="switchEtLampe1"
			android:id="@+id/btEtLampe1"
			android:background="#000000"
			android:textColor="#8792F2"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Lampe 2"
			android:layout_gravity="center_horizontal"
			android:onClick="switchEtLampe2"
			android:id="@+id/btEtLampe2"
			android:background="#FFEF4F"
			android:textColor="#000000"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="0.5"
		android:orientation="vertical">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Couch"
			android:layout_gravity="center_horizontal"
			android:textColor="#FFFFFF"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Lampe 1"
			android:layout_gravity="center_horizontal"
			android:onClick="switchCoLampe1"
			android:id="@+id/btCoLampe1"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Lampe 2"
			android:layout_gravity="center_horizontal"
			android:onClick="switchCoLampe2"
			android:id="@+id/btCoLampe2"/>

	</LinearLayout>

</LinearLayout>

